<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomButtonsStyleAttr">@style/DefaultPartButtonsStyle</item>
    </style>

    <style name="DefaultPartButtonsStyle">
        <item name="btnPositiveBackgroundColor">@color/purple_700</item>
        <item name="btnNegativeBackgroundColor">@color/teal_200</item>
    </style>

    <style name="PartButtonStyle">
        <item name="btnPositiveBackgroundColor">#FFEB3B</item>
        <item name="btnNegativeBackgroundColor">#FFEB3B</item>
    </style>
</resources>